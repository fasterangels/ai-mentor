{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AI Mentor",
  "version": "0.3.0",
  "identifier": "com.ai.mentor.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "AI Μέντορας",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": ["icons/app.ico"],
    "resources": ["bin/ai-mentor-backend.exe", "bin/launch_backend.cmd"],
    "windows": {
      "nsis": {
        "installerHooks": "./windows/hooks.nsh",
        "installerIcon": "icons/app.ico",
        "installMode": "currentUser"
      }
    }
  }
}